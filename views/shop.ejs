<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="fixed">
            <div class="flex items-center gap-2">
                <h3>sort by</h3>
                <form action="/shop">
                    <select class="border-[1px] px-2 py-1" name="sortby" id="">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>
            <div class="flex flex-col mt-20">
                <a class="block w-fit mb-2" href="">New Collection</a>
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Discounted Products</a>
            </div>
            <div class="mt-32">
                <a class="block w-fit mb-2" href="">Filter by :</a>
                <a class="block w-fit mb-2" href="">Availability</a>
                <a class="block w-fit mb-2" href="">Discount</a>
            </div>
        </div>
        </div>
        <div class="w-[75%] h-screen">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
                <% products.forEach(function(product){ %>
                    <a href="/show/<%= product._id %>" 
                       class="w-60 rounded-[5px] overflow-hidden shadow-md block transition-transform transform hover:scale-105 duration-300 ease-in-out">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]" id="show">
                            <img class="h-[12rem] transition-transform transform hover:scale-110 duration-300 ease-in-out" 
                                 src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                        </div>
                        <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                            <div>
                                <h3><%= product.name %></h3>
                                <h4>â‚¹ <%= product.price %></h4>
                            </div>
                            <span class="w-7 h-7 flex items-center justify-center rounded-full bg-white" 
                                  onclick="event.stopPropagation(); window.location.href='/addtocart/<%= product._id %>'">
                                <i class="ri-add-line"></i>
                            </span>
                        </div>
                    </a>
                <% }) %>
            </div>
            
    </div>
